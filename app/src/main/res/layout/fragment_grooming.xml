<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="drd.flhspatriotbattalion.CentralFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"


        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"


            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Grooming"
                android:id="@+id/Grooming_Header"
                android:background="@color/colorAccentDark"

                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold"
                tools:targetApi="jelly_bean_mr1"
                android:elevation="2dp"
                />
            <Space
                android:id="@+id/space3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/Grooming_Header"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Males"
                android:id="@+id/males"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_below="@+id/space3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:elevation="2dp"
                />
            <Space
                android:id="@+id/space"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_below="@+id/males"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/grooming_males_Text"
                android:id="@+id/males_text"

                android:background="@color/colorPrimarySuperLight"
                android:textSize="20sp"
                android:layout_below="@+id/space"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:elevation="2dp"
                />
            <Space
                android:id="@+id/space5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/males_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Females"
                android:id="@+id/females"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_below="@+id/space5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:elevation="2dp"
                />
            <Space
                android:id="@+id/space4"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_below="@+id/females"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/grooming_females_Text"
                android:id="@+id/females_text"

                android:background="@color/colorPrimarySuperLight"
                android:textSize="20sp"
                android:layout_below="@+id/space4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:elevation="2dp"
                />

        </RelativeLayout>
    </ScrollView>




</FrameLayout>
